# Arquivo de exemplo de configuração de ambiente (.env)
# Renomeie este arquivo para .env e preencha com suas credenciais reais

# Configurações Gerais
DEBUG=False
LOG_LEVEL=INFO

# Configurações das Exchanges
KUCOIN_API_KEY=sua_api_key_aqui
KUCOIN_API_SECRET=seu_api_secret_aqui
KUCOIN_API_PASSPHRASE=sua_passphrase_aqui

KRAKEN_API_KEY=sua_api_key_aqui
KRAKEN_API_SECRET=seu_api_secret_aqui

# Configurações do Sistema
MAX_MEMORY_CAPACITY=1000
MIN_CONFIDENCE=0.7
MAX_POSITION_SIZE=0.1
MAX_DRAWDOWN=2.0

# Configurações de Proteção
QUANTUM_PROTECTION_LEVEL=0.8
MORPHIC_FIELD_THRESHOLD=0.6
CONSCIOUSNESS_THRESHOLD=0.7

# Configurações de Logging
LOG_FORMAT=json
LOG_FILE=qualia.log
ENABLE_ADVANCED_MONITORING=True

# Configurações de Backup
BACKUP_ENABLED=True
BACKUP_INTERVAL=3600  # em segundos
BACKUP_DIR=./backups

# Configurações de Rede
API_PORT=8000
API_HOST=localhost
WEBSOCKET_PORT=8001

# Configurações de Trading
# Valor máximo por operação em USDT
VALOR_MAXIMO_OPERACAO=100.0
# Limite de perda total permitido em porcentagem
LIMITE_PERDA_TOTAL=10.0
# Número máximo de operações simultâneas
LIMITE_OPERACOES_SIMULTANEAS=2
# Intervalo entre verificações de mercado (segundos)
INTERVALO_VERIFICACAO=5

# Configurações de Segurança
# Habilitar proteção contra decoerência (true/false)
HABILITAR_PROTECAO_DECOERENCIA=true
# Limite de volatilidade para ativar circuito de segurança
LIMITE_VOLATILIDADE=5.0

# Configurações de Mineração
MINER_TYPE=xmr-stak
WALLET_ADDRESS=your-monero-wallet-address
WORKER_NAME=qualia-worker
THREADS=4
INTENSITY=100
PRIORITY=2

# Configurações de Hardware
CPU_THREADS=4
GPU_THREADS=2
GPU_PLATFORM=0
GPU_DEVICE=0

# Configurações de Otimização
AUTO_OPTIMIZE=true
OPTIMIZATION_INTERVAL=300
MIN_HASHRATE=0.0
MAX_POWER=100.0
MAX_TEMPERATURE=80.0

# Configurações de Pools
POOL_CONFIG_FILE=pools.json
MIN_POOL_LATENCY=1.0
POOL_SWITCH_INTERVAL=300

# Configurações de Monitoramento
METRICS_INTERVAL=1.0
PROMETHEUS_PORT=9090

# Configurações de Segurança
ENCRYPTION_KEY=your-encryption-key
API_KEY=your-api-key
API_SECRET=your-api-secret

# Configurações de Rede
PROXY_URL=
PROXY_USER=
PROXY_PASS=

# Exchange API Keys
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Trading Configuration
TRADING_MODE=simulated  # simulated or real
TRADING_SYMBOL=BTC/USDT
TRADING_TIMEFRAME=1m

# Risk Management
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.02
MAX_DRAWDOWN=0.05

# Scalping Parameters
MIN_PROFIT_THRESHOLD=0.0005  # 0.05%
MAX_LOSS_THRESHOLD=0.0003    # 0.03%
MAX_POSITION_TIME=300        # 5 minutes
MIN_VOLUME_THRESHOLD=1000    # Minimum volume
MAX_SPREAD_THRESHOLD=0.0002  # 0.02%

# Exchange Fees
EXCHANGE_FEE=0.0004         # 0.04%
SLIPPAGE=0.0001            # 0.01%
MIN_TRADE_SIZE=0.001       # Minimum trade size

# Simulation Parameters
INITIAL_BALANCE=10000      # Initial balance for simulation
START_DATE=2023-01-01     # Start date for simulation
END_DATE=2023-12-31       # End date for simulation

# Logging
LOG_LEVEL=INFO
LOG_FILE=trading.log

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qualia
DB_USER=your_db_user
DB_PASSWORD=your_db_password
